@model DRS.Models.LawCategory
@{
    ViewData["Title"] = "Create";
}
<div class="modal" id="lawCategoryModal" tabindex="-1" role="dialog" aria-labelledby="lawCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lawCategoryModalLabel">Create Law Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Createfromdocument" method="post" asp-controller="LawCategory">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="LawCategoryName" class="control-label">Law Category Name</label>
                        <input asp-for="LawCategoryName" class="form-control" />
                        <span asp-validation-for="LawCategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center pt-3">
                        <button type="submit" class="btn buttonCustom">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
