@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            function reinitializeCollapsibleRows() {
                $('tr[data-widget="expandable-table"]').click(function () {
                    var expanded = $(this).attr('aria-expanded') === 'true';
                    $(this).attr('aria-expanded', !expanded);
                    $(this).next('.expandable-body').toggle(!expanded);
                });
            }

            $('#addRoleForm').submit(function (e) {
                e.preventDefault();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Roles", "UsersRoles")',
                    data: $(this).serialize(),
                    success: function (response) {
                        var alertType = response.success ? 'alert-success' : 'alert-danger';
                        var iconClass = response.success ? 'fa-check-circle' : 'fa-exclamation-circle';
                        

                        setTimeout(function () {
                            $alert.fadeOut(500, function () {
                                $(this).remove();
                            });
                        }, 3000);

                        if (response.success) {
                            var alertHtml = '<div class="alert ' + alertType + ' alert-dismissible alert-slide-in" role="alert" style="position: relative;">' +
                                '<i class="fas ' + iconClass + ' icon"></i>' +
                                response.message +
                                '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                                '</div>';

                            var $alert = $(alertHtml).appendTo('#alertContainer');

                            setTimeout(function () {
                                $alert.removeClass('alert-slide-in').addClass('alert-fade-out');
                                setTimeout(function () {
                                    $alert.remove();
                                }, 500);
                            }, 3000);

                            loadRolesTable();
                            $('#addRoleForm')[0].reset();
                        } else {
                            var alertHtml = '<div class="alert ' + alertType + ' alert-dismissible alert-slide-in" role="alert" style="position: relative;">' +
                                '<i class="fas ' + iconClass + ' icon"></i>' +
                                response.message +
                                '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                                '</div>';

                            var $alert = $(alertHtml).appendTo('#alertContainer');

                            setTimeout(function () {
                                $alert.removeClass('alert-slide-in').addClass('alert-fade-out');
                                setTimeout(function () {
                                    $alert.remove();
                                }, 500);
                            }, 3000);
                        }
                    },
                    error: function () {
                        var alertHtml = '<div class="alert alert-danger alert-dismissible alert-slide-in" role="alert" style="position: relative;">' +
                            '<i class="fas fa-exclamation-circle icon"></i>' +
                            'An error occurred. Please try again.' +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                            '</div>';

                        var $alert = $(alertHtml).appendTo('#alertContainer');

                        setTimeout(function () {
                            $alert.removeClass('alert-slide-in').addClass('alert-fade-out');
                            setTimeout(function () {
                                $alert.remove();
                            }, 500); 
                        }, 3000);
                    }
                });
            });

            function loadRolesTable() {
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetRolesTable", "UsersRoles")',
                    success: function (data) {
                        $('#rolesTable').html(data);
                        reinitializeCollapsibleRows();
                    }
                });
            }

            reinitializeCollapsibleRows();
        });

        document.getElementById('RoleName').addEventListener('input', function () {
            document.getElementById('RoleNameError').style.display = 'none';
        });
    </script>
}